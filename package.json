{
    "name": "data-weave",
    "version": "0.4.3",
    "main": "build/index.js",
    "types": "src/index.ts",
    "files": [
        "src/**/*",
        "tsconfig.json",
        "build"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "version": "node ./scripts/version.js && yarn lerna:prepare && git add packages/**/lib/version.js",
        "lerna:prepare": "lerna run prepare",
        "lerna:publish": "lerna publish --sync-dist-version --force-publish",
        "artifactregistry-login": "npx google-artifactregistry-auth",
        "compile": "tsc --project .",
        "format": "prettier --write \"packages/**/*.{js,ts,json}\"",
        "format:check": "prettier --check \"packages/**/*.{js,ts,json}\"",
        "circular-dep-check": "madge --circular --extensions ts ./",
        "lint": "npm run lint:packages",
        "lint:packages": "eslint packages/* --max-warnings=0",
        "start:dev": "npx nodemon",
        "build": "rm -Rf ./build && tsc",
        "prepublish": "npm run build",
        "start": "npm run build && node build/index.js",
        "test": "./scripts/test-with-emulator.sh",
        "test:js-sdk": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && SDK_TYPE=JS_SDK jest",
        "test:admin-sdk": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && SDK_TYPE=ADMIN_SDK jest",
        "test:watch": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && jest --watch",
        "test:watch-js": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && SDK_TYPE=JS_SDK jest --watch",
        "test:watch-admin": "export FIRESTORE_EMULATOR_HOST=localhost:8080 && SDK_TYPE=ADMIN_SDK jest --watch",
        "test:emulator": "./scripts/test-with-emulator.sh",
        "prepare": "npm run build"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.17.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.20.0",
        "eslint-plugin-prettier": "^5.5.0",
        "eslint-plugin-promise": "^7.2.1",
        "firebase": "^11.9.0",
        "firebase-admin": "^13.0.2",
        "firebase-tools": "^13.30.2",
        "genversion": "^3.2.0",
        "husky": "^9.1.7",
        "inversify": "^6.2.1",
        "jest": "^29.7.0",
        "lerna": "^8.2.2",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "reflect-metadata": "^0.2.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.0",
        "madge": "8.0.0",
        "uuid": "^11.1.0"
    },
    "peerDependencies": {
        "inversify": "^6.2.1",
        "reflect-metadata": "^0.2.2"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "lint-staged": {
        "packages/*": [
            "eslint --max-warnings=0 --fix"
        ],
        "**/*.{js,ts,json}": "prettier --write"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
