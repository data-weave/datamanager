{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["es6"],
        "module": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "composite": true
    },
    "exclude": ["node_modules", "**/__tests__", "**/dist"]
}
