{
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts", "src/_test/**/*"],
    "compilerOptions": {
        "target": "es2016",
        "lib": ["es6"],
        "module": "commonjs",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "declaration": true,
        "declarationDir": "build/types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
